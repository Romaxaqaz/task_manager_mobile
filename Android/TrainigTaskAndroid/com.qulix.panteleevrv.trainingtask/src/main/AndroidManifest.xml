<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qulix.panteleevrv.trainingtask">

    <application
        android:name=".client.TrainingApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".client.ui.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".client.ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client.ui.employee.EmployeeListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client.ui.employee.DetailEmployeeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".client.ui.project.ProjectListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client.ui.project.DetailProjectActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".client.ui.task.TaskListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client.ui.task.DetailTaskActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".client.ui.settings.SettingsActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
