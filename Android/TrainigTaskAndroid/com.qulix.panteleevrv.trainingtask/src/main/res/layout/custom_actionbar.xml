<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/action_bar_height"
              style="@style/HorizontalLinear">

    <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/action_bar_icon_size"
            android:layout_height="@dimen/action_bar_icon_size"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/back_arrow" />

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/headerColor"
            android:layout_gravity="center"
            android:textSize="@dimen/header_activity_text_size"
            android:layout_marginLeft="@dimen/action_bar_margin_left" />

</LinearLayout>