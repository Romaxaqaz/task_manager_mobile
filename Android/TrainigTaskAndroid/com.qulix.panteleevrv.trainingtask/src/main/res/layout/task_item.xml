<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_margin"
            android:layout_marginBottom="@dimen/list_item_margin"
            style="@style/HorizontalLinear">

        <TextView
                android:id="@+id/taskItemId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/task_id_weight"
                android:layout_gravity="center"
                style="@style/ListItemText" />

        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/task_status_weight"
                android:layout_gravity="center">

            <ImageView
                    android:id="@+id/taskItemStatus"
                    android:layout_width="@dimen/ico_size"
                    android:layout_height="@dimen/ico_size"
                    android:layout_gravity="center" />
        </GridLayout>

        <TextView
                android:id="@+id/taskItemProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/task_project_weight"
                android:layout_gravity="center"
                style="@style/ListItemText" />

        <TextView
                android:id="@+id/taskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/task_name_weight"
                android:layout_gravity="center"
                style="@style/ListItemText" />

    </LinearLayout>

</LinearLayout>
